---
layout: base.njk
title: Certified Devices
permalink: /devices/
---

<div class="wrapper wrapper-a">
  <div class="devices-page">
    <div class="devices-header">
      <h1>Works with Home Assistant Devices</h1>
      <p>
        Browse all certified devices that are part of Works with Home Assistant
      </p>
    </div>

    <div class="devices-filters">
      <input
        type="text"
        id="searchInput"
        placeholder="Search by brand, device name, model number..."
      />
      <select id="brandFilter">
        <option value="">All Brands</option>
        {% for filename, data in collections.all[0].data.devices %}
        <option value="{{ data.companyName }}">
          {{ data.companyName }}
        </option>
        {% endfor %}
      </select>
      <select id="protocolFilter">
        <option value="">All Protocols</option>
      </select>
      <select id="deviceTypeFilter">
        <option value="">All Device Types</option>
      </select>
      <select id="regionFilter">
        <option value="">All Regions</option>
      </select>
    </div>

    <div class="table-container">
      <table id="devicesTable" class="devices-table">
        <thead>
          <tr>
            <th data-sort="brand" class="sortable">
              Brand <span class="sort-icon"></span>
            </th>
            <th data-sort="deviceName" class="sortable">
              Device Name <span class="sort-icon"></span>
            </th>
            <th data-sort="modelNumber" class="sortable">
              Model Number <span class="sort-icon"></span>
            </th>
            <th data-sort="protocol" class="sortable">
              Certified Protocol <span class="sort-icon"></span>
            </th>
            <th data-sort="deviceType" class="sortable">
              Device Type <span class="sort-icon"></span>
            </th>
            <th data-sort="region">Region</th>
            <th data-sort="functionalityRemark" class="sortable">
              Functionality Remark <span class="sort-icon"></span>
            </th>
            <th>Link</th>
          </tr>
        </thead>
        <tbody id="devicesTableBody">
          {% for filename, data in collections.all[0].data.devices %} {% for
          device in data.devices %}
          <tr
            data-brand="{{ data.companyName }}"
            data-protocol="{{ device.protocol }}"
            data-device-type="{{ device.deviceType }}"
            data-regions="{{ device.region | join(',') }}"
            data-search="{{
              (data.companyName +
                ' ' +
                device.deviceName +
                ' ' +
                device.modelNumber +
                ' ' +
                device.deviceType) | lower
            }}"
          >
            <td>{{ data.companyName }}</td>
            <td>{{ device.deviceName }}</td>
            <td>{{ device.modelNumber }}</td>
            <td>{{ device.protocol }}</td>
            <td>{{ device.deviceType }}</td>
            <td class="region-cell">
              {% for region in device.region %}
              <span class="region-badge">{{ region }}</span>
              {% endfor %}
            </td>
            <td>{{ device.functionalityRemark }}</td>
            <td>
              {% if device.websiteLink %}
              <a
                href="{{ device.websiteLink }}"
                target="_blank"
                rel="noopener noreferrer"
                >View</a
              >
              {% endif %}
            </td>
          </tr>
          {% endfor %} {% endfor %}
        </tbody>
      </table>
    </div>

    <div class="pagination-wrapper">
      <div class="devices-count">
        Showing <span id="visibleCount">0</span> of
        <span id="filteredCount">0</span> devices (<span id="totalCount"
          >0</span
        >
        total)
      </div>

      <div class="pagination-controls">
        <button id="prevPage" class="pagination-btn" disabled>
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
          Previous
        </button>

        <div id="pageNumbers" class="page-numbers"></div>

        <span id="pageInfo" class="page-info">Page 1 of 1</span>

        <button id="nextPage" class="pagination-btn">
          Next
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>

      <div class="items-per-page">
        <label for="itemsPerPage">Show:</label>
        <select id="itemsPerPage">
          <option value="10">10</option>
          <option value="25" selected>25</option>
          <option value="50">50</option>
          <option value="100">100</option>
        </select>
        <span>per page</span>
      </div>
    </div>
  </div>
</div>

<script src="/js/devices-table.js"></script>
